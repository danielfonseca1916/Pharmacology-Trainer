{
  "name": "pharmacology-trainer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "typecheck": "tsc --noEmit",
    "check": "pnpm lint && pnpm typecheck && pnpm dataset:lint && pnpm test",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:studio": "prisma studio",
    "seed": "tsx prisma/seed.ts",
    "validate:data": "tsx scripts/validate-data.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "e2e": "playwright test",
    "dataset:lint": "tsx scripts/dataset-lint.ts",
    "dataset:export": "tsx scripts/dataset-export.ts",
    "dataset:validate": "tsx scripts/validate-data.ts",
    "admin:promote": "tsx scripts/promote-admin.ts",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.474.0",
    "next": "16.1.5",
    "next-auth": "^5.0.0-beta.25",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^2.5.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@playwright/test": "^1.49.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^2.1.5",
    "eslint": "^9",
    "eslint-config-next": "16.1.5",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^15.3.0",
    "playwright": "^1.49.1",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "prisma": "^6.1.0",
    "tailwindcss": "^4",
    "tsx": "^4.19.1",
    "typescript": "^5",
    "vite": "^5.4.21",
    "vitest": "^2.1.5",
    "zod-to-json-schema": "^3.23.5"
  }
